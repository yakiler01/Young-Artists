@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <section class="section register min-vh-50 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">


                        <div class="d-flex justify-content-center py-4">
                            <a class="logo d-flex align-items-center w-auto">
                                <img src="assets/img/YoungArtist-logo.png" alt="">
                                    <h2 class="d-none d-lg-block">聞意青年</h2>
                                @*<span class="d-none d-lg-block">管理員系統</span>*@
                            </a>
                        </div><!-- End Logo -->
                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">管理員登入系統</h5>
                                    @*<p class="text-center small">請輸入管理員帳號密碼</p>*@
                                </div>

                                <form class="row g-3 needs-validation" novalidate>

                                    <div class="col-12 mb-3">
                                        <label for="yourUsername" class="form-label">管理員帳號</label>
                                        <div class="input-group has-validation">
                                            <input type="text" name="txtAdminAccount" class="form-control" id="yourUsername" required>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="invalid-feedback">請輸入管理員帳號</div>
                                        </div>
                                    </div>

                                    <div class="col-12 mb-4">
                                        <label for="yourPassword" class="form-label">管理員密碼</label>
                                        <input type="password" name="txtAdminPassword" class="form-control" id="yourPassword" required>
                                        <div class="invalid-feedback">Please enter your password!</div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Login</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>
}



