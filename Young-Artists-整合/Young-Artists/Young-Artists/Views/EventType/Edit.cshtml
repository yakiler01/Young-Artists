@model Young_Artists.Models.EventType

@{
    ViewData["Title"] = "Edit";
}

<h1>編輯活動種類</h1>

<h4>活動種類</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="EventTypeId" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="EventTypeName" class="control-label">活動種類名稱</label>
                <input asp-for="EventTypeName" class="form-control" />
                <span asp-validation-for="EventTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="編輯" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
