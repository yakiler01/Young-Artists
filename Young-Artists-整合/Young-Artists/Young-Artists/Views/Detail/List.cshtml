@model IEnumerable<Young_Artists.Models.Detail>

@{
    ViewData["Title"] = "List";
}

<h1>活動異動公告一覽</h1>

<p>
    <a asp-action="Create" text-decoration:none class="btn btn-primary">新增異動資訊</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eventtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Eventtime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        @Html.ActionLink("編輯", "Edit", new {  id=item.DetailsId },new {Class ="btn btn-success"}) 
                        @Html.ActionLink("刪除", "Delete" , new { id=item.DetailsId } ,new { onclick ="return confirm('確定要刪除嗎?')" ,Class = "btn btn-danger"})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
