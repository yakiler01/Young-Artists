@model IEnumerable<Young_Artists.Models.EventLocation>

@{
    ViewData["Title"] = "List";
}

<h1>活動地點</h1>
@using (Html.BeginForm())
{
    <p>
        活動地點關鍵字查詢
        @Html.TextBox("txtEventKeyword")
        <input type="submit" value="查詢" />
    </p>
}
<div class="container d-flex mb-3">
    <div class="btn-group me-3">
        <a class="nav-link dropdown-toggle text-white btn btn-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            活動管理
        </a>
        <ul class="dropdown-menu position-absolute right">
            <li><a class="dropdown-item " href="~/Event/List">回到活動列表</a></li>
            <li><a class="dropdown-item " href="~/Event/Create">建立新活動</a></li>
        </ul>
    </div>
    <div class="btn-group me-3">
        <a class="nav-link dropdown-toggle text-white btn btn-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            活動地點管理
        </a>
        <ul class="dropdown-menu position-absolute right">
            <li><a class="dropdown-item " href="~/EventLocation/List">回到活動地點列表</a></li>
            <li><a class="dropdown-item " href="~/EventLocation/Create">建立新活動地點</a></li>
        </ul>
    </div>
    <div class="btn-group me-3">
        <a class="nav-link dropdown-toggle text-white btn btn-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            活動種類管理
        </a>
        <ul class="dropdown-menu position-absolute right">
            <li><a class="dropdown-item " href="~/EventType/List">回到活動種類列表</a></li>
            <li><a class="dropdown-item " href="~/EventType/Create">建立新活動種類</a></li>
        </ul>
    </div>
</div>
<p>
    <a asp-action="Create">新增活動地點</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                活動地點名稱
            </th>
            <th>
                活動地點圖片
            </th>
            <th>
                活動地點資訊
            </th>
            <th>
                活動地點地址
            </th>
            <th>
                活動地點是否上架
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{  int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventLocationName)
                    </td>
                    <td>
                        <img src="~/Images/@item.EventLocationImage" width="80" height="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventLocationInfo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventLocationAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventLocationIsstate)
                    </td>
                    <td>
                        @Html.ActionLink("修改", "Edit","EventLocation", new { id = item.EventLocationId } , new{@class = "btn btn-success"})
                    </td>
                    <td>
                        @Html.ActionLink("刪除", "Delete", "EventLocation", new { id = item.EventLocationId },new { onclick = "return confirm('是否確定要刪除此活動地點?')",@class = "btn btn-danger" })
                    </td>
                    <td>
                        @Html.ActionLink("下架", "Discontinued", "EventLocation", new { id = item.EventLocationId },new { onclick = "return confirm('是否確定要下架此活動地點?')",@class = "btn btn-danger" })
                    </td>
                    <td>
                        @Html.ActionLink("上架", "Continued", "EventLocation", new { id = item.EventLocationId },new { onclick = "return confirm('是否確定要上架此活動地點?')",@class = "btn btn-primary" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
